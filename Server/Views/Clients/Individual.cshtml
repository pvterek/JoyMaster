@model Server.Models.CommandModel

@{
    ViewData["Title"] = "Command executor";
}

<h5>@Model.ClientId</h5>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/clientOutput.js"></script>

<input type="hidden" id="clientId" value="@Model.ClientId" />

<div style="padding-top: 20px; display: flex; justify-content: center;">
    <div id="clientDesktop" style="height: 400px; width: 600px; overflow-y: auto; border: 1px solid #ccc; padding: 10px; ">
    </div>
</div>

<div style="padding-top: 20px;">
    <div id="consoleOutput" style="height: 300px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;">
    </div>
</div>

<div class="form-group d-flex justify-content-center">
    <input type="text" class="form-control mr-2" id="command" />
    <button type="button" class="btn btn-primary" onclick="sendCommand('@Model.ClientId'); $('#command').val('');">Send</button>
</div>

